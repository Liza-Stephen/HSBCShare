package com.hsbc.jdbc.main;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class JdbcPstMain {

	public static void main(String[] args) {

		try {
			Connection con = DriverManager.getConnection("jdbc:derby:e:/derbydb/trgdb");

			System.out.println("Connection successfully created");
			
			int eid[]= {100,200,300};
			float sal[]= {1000,2000,3000};
			
			PreparedStatement pst=con.prepareStatement("update emp set salary=? where empid=?");
			
			for(int i=0;i<eid.length;i++) {
				
				pst.setFloat(1,sal[i]);
				pst.setInt(2, eid[i]);
				pst.executeUpadte();
			}
			
			
			
			con.close();


		} catch (SQLException ex) {
			ex.printStackTrace();
		}

	}

}
