package com.hsbc.trg.threads;

public class NumberThread extends Thread {

	int nums[];

	public NumberThread(int[] nums) {
		super();
		this.nums = nums;
	}

	public void run() {

		int sum = 0;
		for (int x : nums) {
			System.out.println(x);
			sum = sum + x;
		}

		System.out.println("Sum =" + sum);
	}

}
