package com.hsbc.jdbc.main;

import java.sql.Connection;
import java.sql.Date;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;

import com.multi.domain.Employee;

public class JdbcMain {

	public static void main(String[] args) {

		try {
			Connection con = DriverManager.getConnection("jdbc:derby:e:/derbydb/trgdb");

			System.out.println("Connection successfully created");
			Statement stmt = con.createStatement();
			ResultSet rs = stmt.executeQuery("select name from emp where salary> 6000 order by name");
			
			ArrayList<Employee> list = new ArrayList<>();
			while(rs.next()) {
				
				int eid=rs.getInt(1);
				String name=rs.getString("NAME"); // getString(2)
				float salary = rs.getFloat("SALARY");
			
				Employee x=new Employee(eid,name,salary);
				
				list.add(x);
			}
			con.close();
			
			for(Employee e:list) {
				System.out.println(e);
			}
			


		} catch (SQLException ex) {
			ex.printStackTrace();
		}

	}

}
