package javaioproject;

import java.io.BufferedReader;
import java.io.FileReader;

import com.hr.Employee;

public class IOMain {

	public static void main(String[] args) throws IOException {
		Employee[] list = new Employee[4];

		BufferedReader br = new BufferedReader(new FileReader("d:/emp.txt"));
		for (int i = 0; i < list.length; i++) {
			String line = br.readLine();
			if (line == null)
				break;
			String tk[] = line.split(":");
			int eid = Integer.parseInt(tk[0]);
			float sl = Float.parseFloat(tk[2]);
			Employee e = new Employee(eid, tk[1], sl);
			list[i] = e;

		}

		for (int i = 0; i < list.length; i++) {
			System.out.println(list[i]);
		}

	}

}
