package com.multi.dao;

import com.multi.domain.Employee;

public class EmployeeArrayDao implements EmployeeDao {

	Employee[] employees = { new Employee(100, "Suresh", 26000), new Employee(200, "Aloknath", 18000),
			new Employee(300, "Banerjee", 12000), new Employee(400, "Guptha", 8000), new Employee(500, "Deepa", 6000) };

	@Override
	public void create(Employee e) {
		System.out.println("Create method not implemented");

	}

	@Override
	public Employee getEmployee(int id) {

		for (Employee x : employees) {
			if (x.getEmpId() == id)
				return x;
		}

		return null;
	}

	@Override
	public Employee[] getAllEmployees() {

		Employee[] x = new Employee[employees.length];
		for (int i = 0; i < employees.length; i++) {
			x[i] = new Employee(employees[i].getEmpId(), employees[i].getName(), employees[i].getSalary());
		}

		return x;
	}

	@Override
	public void update(Employee e) {
		Employee e1 = null;
		for (Employee x : employees) {
			if (x.getEmpId() == e.getEmpId()) {
				e1 = x;
			}

		}

		if (e1 == null)
			throw new EmployeeNotFoundException();

		e1.setName(e.getName());
		e1.setSalary(e.getSalary());

		
	}

	@Override
	public void delete(int id) {
		// TODO Auto-generated method stub

	}

}
